public class Main {
    public static void main(String[] args) {
        
        ContaBancaria conta = new ContaBancaria(12345, "João Silva", 1000.00);

        System.out.println("Informações iniciais da conta:");
        conta.exibirInformacoes();

        
        conta.depositar(500.00);
        System.out.println("\nApós depósito de R$ 500,00:");
        conta.exibirInformacoes();

         booblean sucesso = conta.sacar(300.00);
        System.out.println("\nTentativa de saque de R$ 300,00: " + (sucesso ? "Sucesso" : "Falha"));
        conta.exibirInformacoes();

    
        sucesso = conta.sacar(1500.00);
        System.out.println("\nTentativa de saque de R$ 1500,00: " + (sucesso ? "Sucesso" : "Falha"));
        conta.exibirInformacoes();
    }
}
